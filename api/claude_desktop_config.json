{
    "_instructions": "Copy the 'mcpServers' section to your Claude Desktop config file",
    "_config_locations": {
        "windows": "%APPDATA%\\Claude\\claude_desktop_config.json",
        "macos": "~/Library/Application Support/Claude/claude_desktop_config.json",
        "linux": "~/.config/Claude/claude_desktop_config.json"
    },
    "mcpServers": {
        "manhattan-memory": {
            "command": "python",
            "args": [
                "<PATH_TO>/mcp_memory_client.py"
            ],
            "env": {
                "MANHATTAN_API_KEY": "<YOUR_API_KEY>",
                "MANHATTAN_API_URL": "https://agent-architects-studio.onrender.com/manhattan"
            }
        }
    }
}